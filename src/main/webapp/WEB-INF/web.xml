  <filter>
    <filter-name>encode</filter-name>
    <filter-class>cn.lyf1433223.util.EncodingFiter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>encode</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>



</web-app>

